<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/root"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/lov_multi_select_grey200"
  android:transitionName="LOV_TRANSITION">

  <android.support.constraint.ConstraintLayout
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:minHeight="@dimen/lov_multi_select_config_toolbar_height">

    <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/lov_multi_select_btn_back"
      android:layout_width="@dimen/lov_multi_select_config_bottom_height"
      android:layout_height="@dimen/lov_multi_select_config_bottom_height"
      android:layout_marginRight="8dp"
      android:background="@drawable/lov_multi_select_background_oval_dark_borderless"
      android:scaleType="centerInside"
      android:src="@drawable/lov_multi_select_ic_back_dark"
      android:stateListAnimator="@animator/lov_multi_select_shadow_4dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatEditText
      android:id="@+id/search_view"
      android:layout_width="0dp"
      android:layout_height="48dp"
      android:layout_marginLeft="0dp"
      android:layout_marginRight="16dp"
      android:gravity="right|center_vertical"
      android:hint="@string/lov_multi_select_search"
      android:textColor="@color/lov_multi_select_colors_text_dark"
      android:textColorHint="@color/lov_multi_select_disabledAndHintTextLight"
      app:layout_constraintLeft_toRightOf="@id/lov_multi_select_btn_clear_search"
      app:layout_constraintRight_toLeftOf="@id/lov_multi_select_btn_back"
      app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatImageButton
      android:id="@+id/lov_multi_select_btn_clear_search"
      android:layout_width="@dimen/lov_multi_select_config_bottom_height"
      android:layout_height="@dimen/lov_multi_select_config_bottom_height"
      android:layout_marginLeft="8dp"
      android:background="@drawable/lov_multi_select_background_oval_dark_borderless"
      android:scaleType="centerInside"
      android:src="@drawable/lov_multi_select_ic_clear_light_theme"
      android:stateListAnimator="@animator/lov_multi_select_shadow_4dp"
      android:visibility="visible"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
      android:id="@+id/progressBar"
      style="@style/Widget.AppCompat.ProgressBar.Horizontal"
      android:layout_width="0dp"
      android:layout_height="2dp"
      android:indeterminate="true"
      android:visibility="invisible"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/search_view"/>

    <android.support.v4.widget.NestedScrollView
      android:id="@+id/tag_container"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:fadeScrollbars="false"
      android:scrollbarAlwaysDrawVerticalTrack="true"
      android:scrollbarSize="2dp"
      android:scrollbars="vertical"
      android:verticalScrollbarPosition="left"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/progressBar">

      <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/tag_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:visibility="visible"
        app:container_background_color="#0FFF"
        app:container_border_color="#FFF"
        app:container_border_radius="0dp"
        app:container_border_width="0dp"
        app:container_enable_drag="false"
        app:container_gravity="right"
        app:horizontal_interval="3dp"
        app:tag_background_color="@color/lov_multi_select_color_tag_background"
        app:tag_border_color="#444"
        app:tag_border_width="1dp"
        app:tag_clickable="true"
        app:tag_corner_radius="4dp"
        app:tag_cross_color="@color/lov_multi_select_cross_color"
        app:tag_cross_line_width="2dp"
        app:tag_cross_width="24dp"
        app:tag_enable_cross="true"
        app:tag_ripple_color="#FFF"
        app:tag_ripple_duration="0"
        app:tag_text_color="#FFF"
        app:tag_theme="none"
        app:vertical_interval="4dp"/>
    </android.support.v4.widget.NestedScrollView>

  </android.support.constraint.ConstraintLayout>

  <View
    android:id="@+id/spacer"
    android:layout_width="0dp"
    android:layout_height="3dp"
    android:background="@drawable/lov_multi_select_shadow"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/list"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="visible"
    app:layout_constraintBottom_toTopOf="@id/lov_multi_select_btn_ok"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/spacer"/>

  <android.support.v7.widget.AppCompatButton
    android:id="@+id/lov_multi_select_btn_ok"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lov_multi_select_config_bottom_height"
    android:layout_gravity="bottom"
    android:background="@drawable/lov_multi_select_button_bg_blue"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center"
    android:stateListAnimator="@animator/lov_multi_select_shadow_4dp"
    android:text="OK"
    android:textColor="@color/lov_multi_select_colors_flat_button_text_dark_theme"
    android:textSize="14sp"
    app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>